# Figure out the symlink-resolved program name and directory.
progName="$(readlink -f "$0")" || exit "$?"
progDir="${progName%/*}"
progName="${progName##*/}"

# Set up for library-internal usage.
. "${progDir}/init" --lib


#
# Argument parsing
#

function usage {
    print-usage $'
    Usage:
    
    ${name} [<suffix>]
    
    Prints a standardized timestamp representing "now" with an optional
    suffix. This can be used to label things that have nothing more
    suitable.
    
    ${name} [--help | -h]
      Displays this message.
    '

    exit "$1"
}

# Error during argument processing?
argError=0

# Suffix text.
suffix=''

while (( $# > 0 )); do
    case "$1" in
        -h|--help)
            argError=-1 # `-1` suppresses error exit after displaying usage.
            break
            ;;
        --)
            # Explicit end of options.
            shift
            break
            ;;
        -?*)
            echo 1>&2 "Unknown option: $1"
            argError=1
            break
            ;;
        *)
            # Non-option argument.
            break
            ;;
    esac

    shift
done

if (( $# > 0 )); then
    suffix="$1"
fi

if (( argError )); then
    usage "${argError}"
fi


#
# Main script
#

now="$(date -u '+%Y-%m-%d-%H%M%S')"

if [[ ${suffix} == '' ]]; then
    echo "${now}"
else
    echo "${now}-${suffix}"
fi
