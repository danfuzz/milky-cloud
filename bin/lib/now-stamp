# Figure out the symlink-resolved program name and directory.
progName="$(readlink -f "$0")" || exit "$?"
progDir="${progName%/*}"
progName="${progName##*/}"

. "${progDir}/init"


#
# Argument parsing
#

function usage {
    print-usage $'
    Usage:

    ${name} [<suffix>]

    Prints a standardized timestamp representing "now" with an optional
    suffix. This can be used to label things that have nothing more
    suitable.

    ${name} [--help | -h]
      Displays this message.
    '

    exit "$1"
}

# Want help?
opt-action --call=usage --value=0 help/h

# Suffix text.
suffix=''
rest-arg --call=parse-rest
function parse-rest {
    if (( $# < 1 )); then
        return
    elif (( $# > 1 )); then
        echo 1>&2 'Too many arguments.'
        return 1
    fi

    suffix="$1"
}

process-args "$@" || usage "$?"


#
# Main script
#

if [[ ${suffix} != '' ]]; then
    suffix="-${suffix}"
fi

echo "$(date -u '+%Y-%m-%d-%H%M%S')${suffix}"
