# Figure out the symlink-resolved program name and directory.
progName="$(readlink -f "$0")" || exit "$?"
progDir="${progName%/*}"
progName="${progName##*/}"

. "${progDir}/init"


#
# Argument parsing
#

function usage {
    print-usage $'
    Usage:

    ${name} <zone-or-region>
      Prints the region associated with an availability zone or region.

    ${name} [--help | -h]
      Displays this message.
    '

    exit "$1"
}

# Want help?
opt-action --call=usage help/h=0

# Location (availability zone or region).
positional-arg --required --var=inLocation zone-or-region

process-args "$@" || usage "$?"


#
# Main script
#

lib parse-location --print-region "${inLocation}"
