# Figure out the symlink-resolved program name and directory.
progName="$(readlink -f "$0")" || exit "$?"
progDir="${progName%/*}"
progName="${progName##*/}"

. "${progDir}/init"


#
# Argument parsing
#

function usage {
    print-usage $'
    Usage:

    ${name} <zone>
      Prints the region associated with an availability zone.

    ${name} [--help | -h]
      Displays this message.
    '

    exit "$1"
}

# Want help?
opt-action --call=usage help/h=0

# Availability zone.
positional-arg --required --var=inZone zone

process-args "$@" || usage "$?"


#
# Main script
#

lib parse-location --input-zone --print-region "${inZone}"
