# Figure out the symlink-resolved program name and directory.
progName="$(readlink -f "$0")" || exit "$?"
progDir="${progName%/*}"
progName="${progName##*/}"

# Set up for library-internal usage.
. "${progDir}/init" --lib


#
# Argument parsing
#

# Error during argument processing?
argError=0

# Location (availability zone).
inLocation=''

while (( $# > 0 )); do
    case "$1" in
        -h|--help)
            argError=-1 # `-1` suppresses error exit after displaying usage.
            break
            ;;
        --)
            # Explicit end of options.
            shift
            break
            ;;
        -?*)
            echo 1>&2 "Unknown option: $1"
            argError=1
            break
            ;;
        *)
            # Non-option argument.
            break
            ;;
    esac

    shift
done

if (( $# < 1 )); then
    echo 1>&2 'Missing argument: availability zone'
    argError=1
else
    inLocation="$1"
    shift
fi

if (( argError )); then
    echo 'Usage:'
    echo ''
    echo "${progName} <zone>"
    echo '  Prints the region associated with an availability zone.'
    echo ''
    echo "${progName} [--help | -h]"
    echo '  Displays this message.'
    exit $(( argError < 0 ? 0 : argError ))
fi


#
# Main script
#

lib parse-location --input-zone --print-region "${inLocation}"
