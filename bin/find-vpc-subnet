# Figure out the symlink-resolved program name and directory.
progName="$(readlink -f "$0")" || exit "$?"
progDir="${progName%/*}"
progName="${progName##*/}"

# Load the helper library.
. "${progDir}/lib/init"


#
# Argument parsing
#

function usage {
    print-usage $'
    Usage:

    ${name} [<opt> ...]
      Finds a VPC subnet that meets the indicated criteria. On success, prints
      the subnet ID.

      --loc=<availability-zone>
        What availibility zone to look in. Must be specified.
      --vpc=<name-or-id>
        Name or ID of the VPC to look in. Must be specified.

    ${name} [--help | -h]
      Displays this message.
    '

    exit "$1"
}

# Want help?
opt-action --call=usage help/h=0

# Availability zone.
opt-value --required --var=zone --call=parse-zone loc

# Name or ID of VPC to look up.
opt-value --required --var=nameOrId --filter='/./' vpc

process-args "$@" || usage "$?"


#
# Main script
#

vpcId="$(lib find-vpc --loc="${zone}" "${nameOrId}")" \
|| exit "$?"

filterSpec="$(lib filter-spec \
    availability-zone="${zone}" \
    vpc-id="${vpcId}"
)"

result="$(ec2-json describe-subnets \
    --loc="${zone}" \
    "${filterSpec}" \
    :: '.Subnets | map(.SubnetId)' \
)" \
|| exit "$?"

subnetId="$(jget --output=raw "${result}" '
    if length == 0 then "none"
    elif length == 1 then .[0]
    else "ambiguous"
    end
')"

case "${subnetId}" in
    ambiguous)
        echo 1>&2 'Ambiguous specification matches all of:'
        jget 1>&2 --output=raw "${result}" '.[] | "  " + .'
        exit 1
        ;;
    none)
        echo 1>&2 'No such subnet.'
        exit 1
        ;;
esac

echo "${subnetId}"
