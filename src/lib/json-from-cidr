# Set `progName` to the program name, `progDir` to its directory, and `baseDir`
# to `progDir`'s directory. Follows symlinks.
function init-prog {
    local newp p="$0"

    while newp="$(readlink "$p")"; do
        [[ ${newp} =~ ^/ ]] && p="${newp}" || p="$(dirname "$p")/${newp}"
    done

    progName="${p##*/}"
    progDir="$(cd "$(dirname "$p")"; /bin/pwd -P)"
    baseDir="$(cd "${progDir}/.."; /bin/pwd -P)"
}
init-prog

# Set up for library-internal usage.
. "${progDir}/init" --lib


#
# Helper functions
#

# Masks an address with a netmask (that is, logical-ANDs the address with the
# netmask). This canonicalizes an address being used as a network specifier.
function mask-address {
    local address="$1"
    local netmask="$2"

    local pairs="$(jval --compact \
        address:json="${address}" \
        netmask:json="${netmask}" \
        '[$address, $netmask] | transpose'
    )"

    # This is kinda awful. We do the logical-AND of pairs this way because `jq`
    # -- surprisingly -- doesn't offer bitwise operations. If it did, we could
    # just do something like `| map(.[0] & .[1])` in the invocation above.
    local before after v1 v2 combo
    while true; do
        [[ ${pairs} =~ ^(.*)(\[([0-9]+),([0-9]+)\])(.*)$ ]] \
        || break
        before="${BASH_REMATCH[1]}"
        v1="${BASH_REMATCH[3]}"
        v2="${BASH_REMATCH[4]}"
        after="${BASH_REMATCH[5]}"
        combo=$(( ${v1} & ${v2} ))
        pairs="${before}${combo}${after}"
    done

    echo "${pairs}"
}

# Prints a netmask array.
function netmask-array {
    local netmaskBits="$1"
    local totalBits="$2"

    if (( ${netmaskBits} > ${totalBits} )); then
        echo 1>&2 'Too few total bits!'
        return 1
    elif (( (${totalBits} % 16) != 0 )); then
        echo 1>&2 'Total bits must be a multiple of 16!'
        return 1
    fi

    local totalHextets=$(( ${totalBits} / 16 ))
    local result=()

    while (( ${netmaskBits} > 16 )); do
        result+=(65535)
        (( netmaskBits -= 16 ))
    done

    if (( ${netmaskBits} != 0 )); then
        result+=($(( ((1 << ${netmaskBits}) - 1) << (16 - ${netmaskBits}) )))
    fi

    while (( ${#result[@]} < ${totalHextets} )); do
        result+=(0)
    done

    lib json-array "${result[@]}"
}

# Validates and prints out the hextets of an IPv4 address, suitable for
# subsequent inclusion in a final result.
function v4-hextets {
    local address="$1"
    local errorMsg="Unparseable IPv4 address: ${address}"
    local result=()

    address=".${address}" # Avoids a special case for the first iteration.

    local num
    while [[ ${address} != '' ]]; do
        # `0*` below strips leading zeros, so that the number doesn't get
        # interpreted as octal.
        if ! [[ ${address} =~ ^\.0*([0-9]+)(.*)$ ]]; then
            echo 1>&2 "${errorMsg}"
            return 1
        fi

        num="${BASH_REMATCH[1]}"
        address="${BASH_REMATCH[2]}"

        if (( ${num} > 255 )); then
            echo 1>&2 "${errorMsg}"
            return 1
        fi

        result+=("${num}")
    done

    if (( ${#result[@]} > 4 )); then
        echo 1>&2 "${errorMsg}"
        return 1
    fi

    while (( ${#result[@]} < 4 )); do
        result+=(0)
    done

    # The array form uses 16-bit elements, so combine the four 8-bit elements
    # to produce the final result.
    echo '['
    echo $(( (${result[0]} << 8) + ${result[1]} ))
    echo ','
    echo $(( (${result[2]} << 8) + ${result[3]} ))
    echo ']'
}

# Validates and prints out the hextets of an IPv6 address, suitable for
# subsequent inclusion in a final result.
function v6-hextets {
    local address="$1"
    local errorMsg="Unparseable IPv6 address: ${address}"
    local gotGap=0
    local nums=()

    if ! [[ ${address} =~ ^([:0-9a-f]*)(::([:0-9a-f]*))?$ ]]; then
        echo 1>&2 "${errorMsg}"
        return 1
    fi

    while [[ ${address} != '' ]]; do
        if [[ ${address} =~ ^::(.*)$ ]]; then
            if (( ${gotGap} )); then
                # Double gap.
                echo 1>&2 "${errorMsg}"
                return 1
            fi
            gotGap=1
            nums+=(gap)
            address="${BASH_REMATCH[1]}"
        elif [[ ${address} =~ ^([0-9a-f]{1,4})((:.*)|$) ]]; then
            nums+=("0x${BASH_REMATCH[1]}")
            address="${BASH_REMATCH[2]}"
            if [[ ${address} =~ ^:([^:].*)$ ]]; then
                # Strip `:` separator but not `::` gap.
                address="${BASH_REMATCH[1]}"
            fi
        else
            echo 1>&2 "${errorMsg}"
            return 1
        fi
    done

    local zeroCount=0
    if (( ${gotGap} )); then
        if (( ${#nums[@]} > 8 )); then
            echo 1>&2 "${errorMsg}"
            return 1
        fi
        zeroCount=$(( 9 - ${#nums[@]} ))
    else
        if (( ${#nums[@]} != 8 )); then
            echo 1>&2 "${errorMsg}"
            return 1
        fi
    fi

    local result=''
    local n

    for n in "${nums[@]}"; do
        if [[ ${n} == 'gap' ]]; then
            while (( ${zeroCount} > 0 )); do
                result="${result}, 0"
                (( zeroCount-- ))
            done
        else
            # The math expression converts from hex to decimal.
            result="${result}, $(( ${n} ))"
        fi
    done

    # Drop the extra comma and space from the result, and put it in brackets.
    [[ ${result} =~ ^[,\ ]+(.*)$ ]]
    echo "[${BASH_REMATCH[1]}]"
}


#
# Argument parsing
#

# Error during argument processing?
argError=0

# Need help?
showHelp=0

# CIDR value.
value=''

while (( $# > 0 )); do
    case "$1" in
        -h|--help)
            showHelp=1
            break
            ;;
        --)
            # Explicit end of options
            shift
            break
            ;;
        -?*)
            echo 1>&2 "Unknown option: $1"
            argError=1
            break
            ;;
        *)
            # Non-option argument
            break
            ;;
    esac

    shift
done

if [[ $# > 0 ]]; then
    value="$1"
fi

if (( ${showHelp} || ${argError} )); then
    echo 'Usage:'
    echo ''
    echo "${progName} <cidr>"
    echo ''
    echo 'Converts a CIDR value (either for IPv4 or IPv6) into a JSON object'
    echo 'which can then be used for further and more convenient calculation.'
    echo ''
    echo "${progName} [--help | -h]"
    echo '  Displays this message.'
    exit "${argError}"
fi


#
# Main script
#

if ! [[ ${value} =~ ^([.:0-9a-f]+)/([0-9]+)$ ]]; then
    echo 1>&2 "Unparseable CIDR: ${value}"
    exit 1
fi

address="${BASH_REMATCH[1]}"
netmaskBits="${BASH_REMATCH[2]}"
totalBits=
type=

if [[ ${address} =~ : ]]; then
    # It's apparently IPv6.
    type=v6
    totalBits=128
    addressHextets="$(v6-hextets "${address}")" \
    || exit "$?"
elif [[ ${address} =~ \. ]]; then
    # It's apparently IPv4.
    type=v4
    totalBits=32
    addressHextets="$(v4-hextets "${address}")" \
    || exit "$?"
else
    echo 1>&2 "Unparseable CIDR: ${value}"
    exit 1
fi

netmask="$(netmask-array "${netmaskBits}" "${totalBits}" )"
addressHextets="$(mask-address "${addressHextets}" "${netmask}")"

jval \
    address:json="${addressHextets}" \
    netmask:json="${netmask}" \
    netmaskBits:json="${netmaskBits}" \
    type="${type}" \
    '{
        address: $address,
        netmask: $netmask,
        netmaskBits: $netmaskBits,
        type: $type
    }'
